<h1>Bravo votre commande n°{{purchase.id}}
	a été confirmée</h1>

<p>Merci à vous
	{{user.fullName}}</p>
<table>
	<thead>
		<th>Produit</th>
		<th>Quantitté</th>
		<th>Prix Unitaire</th>
		<th>Total</th>
	</thead>
	<tbody>
		{% for item in purchase.purchaseItems %}
			<tr>
				<td>{{item.productName}}</td>
				<td>{{item.quantity}}</td>
				<td>{{item.productPrice / 100}}
					€</td>
				<td>{{item.total / 100}}
					€</td>
			</tr>
		{% endfor %}
	</tbody>
	<tfoot>
		<tr>
			<td colspan="3">Total:
			</td>
			<td>
				{{purchase.total / 100}}
				€</td>
		</tr>
	</tfoot>
</table>
