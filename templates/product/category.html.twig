{% extends "base.html.twig" %}

{% block title %}
	Catégorie:
	{{ category.name}}
{% endblock %}

{% block body %}
	<ol class="breadcrumb">
		<li class="breadcrumb-item">
			<a href="{{ path('homepage') }}">Accueil</a>
		</li>
		<li class="breadcrumb-item">
			<a href="#">{{category.name}}</a>
		</li>
	</ol>
	<h1>Catégorie:
		{{ category.name}}</h1>
	<div class="row">
		{% for p in category.products %}
			<div class="col-3">
				<div class="card">
					<img src="{{ p.mainPicture }}" alt="Imgage du produit" class="img-fluid">
					<div class="card-body">
						<h4>{{ p.name }}
							({{ p.price / 100 }}
							&euro;)</h4>
						<span class="badge bg-info">
							{{ p.category.name }}
						</span>
						<div class="card-text">{{ p.shortDescription }}</div>
						<a href="{{ path('product_show', {'category_slug': p.category.slug ,'slug': p.slug }) }}" class="btn btn-primary btn-sm">Details</a>
						<a href="#" class="btn btn-succcess btn-sm">Ajouter</a>
					</div>
				</div>
			</div>
		{% endfor %}
	</div>
{% endblock %}
